<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.signup.SignUpActivity">

    <ImageView
            android:id="@+id/kakao_profile"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/kakao_nickname"
            android:layout_width="0dp"
            android:layout_height="500dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/kakao_profile"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/kakao_token"
            android:layout_width="0dp"
            android:layout_height="500dp"
            app:layout_constraintTop_toBottomOf="@+id/kakao_nickname"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/btn_main"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:foregroundGravity="center"
            android:text="Home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf = "parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>